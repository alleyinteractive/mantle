{
  "name": "alleyinteractive/mantle",
  "type": "project",
  "description": "A site using the Mantle framework for WordPress",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "Alley",
      "email": "info@alley.co"
    }
  ],
  "autoload": {
    "wordpress": {
      "App\\": "app/",
      "App\\Database\\": "database/"
    }
  },
  "autoload-dev": {
    "wordpress": {
      "App\\Tests\\": "tests/"
    }
  },
  "require": {
    "alleyinteractive/composer-wordpress-autoloader": "dev-test-exception",
    "alleyinteractive/mantle-framework": "dev-main",
    "fakerphp/faker": "^1.9",
    "symfony/mime": "^5.1"
  },
  "require-dev": {
    "alleyinteractive/alley-coding-standards": "^0.3",
    "nunomaduro/collision": "^5.0",
    "phpunit/phpunit": "^8.5.8 || ^9.3.3"
  },
  "config": {
    "apcu-autoloader": true,
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "pre-install-cmd": "./bin/clear-bootstrap.sh",
    "pre-update-cmd": "./bin/clear-bootstrap.sh",
    "post-autoload-dump": [
      "./bin/package-discover.sh"
    ],
    "lint:fix": "@phpcbf",
    "lint": "@phpcs",
    "phpcbf": "phpcbf --standard=./phpcs.xml .",
    "phpcs": "phpcs --standard=./phpcs.xml .",
    "phpunit": "phpunit",
    "test": [
      "@lint",
      "@phpunit"
    ]
  }
}
