{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "build",
    "paths": {
      "@/*": ["*"]
    },
    "resolveJsonModule": true,
    "target": "es6"
  },
  "exclude": [
    "node_modules",
    "build",
    "*.spec.jsx",
    "*.spec.tsx",
    "vendor"
  ],
}
